let ancho = 100;
let altura = 100;

function setup() {
  createCanvas(400, 400);
}

function draw() {
  background (200);
  fill(0, 153, 0);
  rect(100, 100, ancho, altura);

  if (keyIsDown(LEFT_ARROW)) {
    ancho = ancho - 1;
  } 
  else if (keyIsDown(RIGHT_ARROW)){
    ancho = ancho + 1;
  }
    else if (keyIsDown(UP_ARROW)){
    altura = altura + 1;
  }
      else if (keyIsDown(DOWN_ARROW)){
    altura = altura - 1;
  }
}
